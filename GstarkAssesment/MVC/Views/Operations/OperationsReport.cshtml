@model BLL.DTO.DTOOperationsReport

@{
    ViewBag.Title = "Operations Report";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-3">
        @Html.LabelFor(m => m.UserCard.CardNumber)
        @Html.TextBoxFor(m => m.UserCard.CardNumber)
    </div>
    <div class="col-md-3">
        @Html.LabelFor(m => m.UserCard.Balance)
        @Html.TextBoxFor(m => m.UserCard.Balance)
    </div>
</div>
<table class="table table-striped">
    <tr>
        <th>Card Number</th>
        <th>Operation</th>
        <th>Amount</th>
        <th>Timestamp</th>
    </tr>
    @foreach (var item in Model.results)
    {
        <tr>
            <td>
                <label>@item.UserCard.CardNumber</label>
            </td>
            <td>
                <label>@item.OperationCode.Description</label>
            </td>
            <td>
                <label>@item.Amount</label>
            </td>
            <td>
                <label>@item.Date</label>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Index","Home")" class class="btn btn-primary btn-lg active" role="button">Exit</a>
<a href="@Url.Action("Index","Operations")" class="btn btn-primary btn-lg active" role="button">Back</a>