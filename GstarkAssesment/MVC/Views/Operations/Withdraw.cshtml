@model MVC.Models.WithdrawnViewModel
<script>
    $(document).ready(function () {
        clearText();
        $("#@Html.IdFor(m => m.Amount)");
    });

    function addNumber(value) {
        var currentValue = $("#@Html.IdFor(m=>m.Amount)").val();
        if (currentValue.length < 16) {
            $("#@Html.IdFor(m=>m.Amount)").val(currentValue + value);
        }
    }

    function clearText() {
        $("#@Html.IdFor(m=>m.Amount)").val("");
    }
</script>


<h2>Withdraw</h2>

<h3>How much would you like to withdraw?</h3>
<br />

@using (Html.BeginForm("TryWithdraw", "Operations", FormMethod.Post))
{
    if (ViewBag.Messages != String.Empty)
    {
        <h4>@ViewBag.Messages</h4>
    }
    <div class="row">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Amount)
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(m => m.Amount)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            @Html.Partial("_KeyBoard")
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Withdraw</button>
    <button type="button" class="btn btn-primary" onclick="clearText()">Clear</button>
}
<br />
<a href="@Url.Action("Index","Home")" class class="btn btn-primary btn-lg active" role="button">Exit</a>
<a href="@Url.Action("Index","Operations")" class="btn btn-primary btn-lg active" role="button">Back</a>

